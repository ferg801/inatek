<?xml version="1.0" encoding="UTF-8"?>
<metadata>
  <!--
    Este archivo contiene transformaciones para el binding de Inatek Scanner SDK.

    Tipos de transformaciones comunes:
    - attr path="..." name="managedName": Renombrar clases/métodos
    - remove-node path="...": Eliminar clases/métodos del binding
    - attr path="..." name="visibility": Cambiar visibilidad (public, internal, private)
  -->

  <!-- =====================================================
       RENOMBRAMIENTOS DE CLASES PRINCIPALES
       ===================================================== -->

  <!-- Renombrar BleListManager para evitar conflictos -->
  <attr path="/api/package[@name='com.inateck.scanner.ble']/class[@name='BleListManager']"
        name="managedName">InateckBleListManager</attr>

  <!-- Renombrar BleMessager (typo del SDK original) a BleMessenger para mayor claridad -->
  <attr path="/api/package[@name='com.inateck.scanner.ble']/class[@name='BleMessager']"
        name="managedName">BleMessenger</attr>

  <!-- Renombrar BleScannerDevice -->
  <attr path="/api/package[@name='com.inateck.scanner.ble']/class[@name='BleScannerDevice']"
        name="managedName">InateckScannerDevice</attr>


  <!-- =====================================================
       INTERFACES Y CALLBACKS
       ===================================================== -->

  <!-- Convertir callbacks a interfaces C# con prefijo I -->
  <attr path="/api/package[@name='com.inateck.scanner.ble.callback']/interface[@name='BleScanResultCallBack']"
        name="managedName">IBleScanResultCallback</attr>

  <attr path="/api/package[@name='com.inateck.scanner.ble.callback']/interface[@name='BleConnectResultCallBack']"
        name="managedName">IBleConnectResultCallback</attr>


  <!-- =====================================================
       ENUMS
