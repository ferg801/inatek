<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:InateckMauiApp.ViewModels"
             xmlns:services="clr-namespace:InateckMauiApp.Services"
             x:Class="InateckMauiApp.Views.MainPage"
             x:DataType="vm:MainViewModel"
             Title="Inatek Scanner Test">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <!-- =====================================================
                 ENCABEZADO
                 ===================================================== -->
            <Label Text="Inatek BCST-75S"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>

            <!-- =====================================================
                 ESTADO GENERAL
                 ===================================================== -->
            <Border StrokeShape="RoundRectangle 12"
                    Stroke="{StaticResource Primary}"
                    StrokeThickness="2"
                    Padding="15"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Estado del Sistema"
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                        <!-- Inicializado -->
                        <Label Grid.Row="0" Grid.Column="0" Text="Inicializado:" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding IsInitialized}"
                               TextColor="{Binding IsInitialized, Converter={StaticResource BoolToColorConverter}}"/>

                        <!-- Conectado -->
                        <Label Grid.Row="1" Grid.Column="0" Text="Conectado:" FontAttributes="Bold"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding IsConnected}"
                               TextColor="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"/>

                        <!-- Dispositivo -->
                        <Label Grid.Row="2" Grid.Column="0" Text="Dispositivo:" FontAttributes="Bold"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding ConnectedDeviceName}"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <!-- =====================================================
                 MENSAJE DE ESTADO
                 ===================================================== -->
            <Frame BorderColor="{StaticResource Primary}"
                   Padding="12"
                   CornerRadius="8">
                <Label Text="{Binding StatusMessage}"
                       FontSize="14"
                       LineBreakMode="WordWrap"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Italic"/>
            </Frame>

            <!-- =====================================================
                 CONTROLES PRINCIPALES
                 ===================================================== -->
            <Label Text="Controles Principales" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5"/>

            <Button Text="Inicializar Servicio"
                    Command="{Binding InitializeCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="{StaticResource Primary}"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0"
                        Text="Escanear Dispositivos"
                        Command="{Binding ScanCommand}"
                        BackgroundColor="{StaticResource Secondary}"/>

                <Button Grid.Column="1"
                        Text="Detener Escaneo"
                        Command="{Binding StopScanCommand}"
                        BackgroundColor="{StaticResource Tertiary}"/>
            </Grid>

            <ActivityIndicator IsRunning="{Binding IsScanning}"
                              Color="{StaticResource Primary}"
                              HeightRequest="40"/>

            <!-- =====================================================
                 LISTA DE DISPOSITIVOS DESCUBIERTOS
                 ===================================================== -->
            <Label Text="Dispositivos Encontrados" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5"/>

            <Border StrokeShape="RoundRectangle 8"
                    Stroke="{StaticResource Gray300}"
                    MinimumHeightRequest="150"
                    MaximumHeightRequest="200"
                    Padding="5">
                <CollectionView ItemsSource="{Binding DiscoveredDevices}"
                               SelectedItem="{Binding SelectedDevice}"
                               SelectionMode="Single">
                    <CollectionView.EmptyView>
                        <Label Text="No se han encontrado dispositivos"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TextColor="{StaticResource Gray400}"
                               Margin="20"/>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="services:DeviceInfo">
                            <Border StrokeShape="RoundRectangle 6"
                                   Stroke="{StaticResource Gray200}"
                                   Padding="10"
                                   Margin="5">
                                <VerticalStackLayout Spacing="3">
                                    <Label Text="{Binding Name}"
                                          FontAttributes="Bold"
                                          FontSize="15"/>
                                    <Label Text="{Binding Mac}"
                                          FontSize="12"
                                          TextColor="{StaticResource Gray600}"/>
                                    <Label Text="{Binding ConnectionState}"
                                          FontSize="11"
                                          TextColor="{StaticResource Gray500}"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Grid.Column="0"
                        Text="Conectar"
                        Command="{Binding ConnectCommand}"
                        BackgroundColor="Green"/>

                <Button Grid.Column="1"
                        Text="Desconectar"
                        Command="{Binding DisconnectCommand}"
                        BackgroundColor="Red"/>
            </Grid>

            <!-- =====================================================
                 INFORMACIN DEL DISPOSITIVO
                 ===================================================== -->
            <Label Text="Informaci贸n del Dispositivo" FontSize="18" FontAttributes="Bold" Margin="0,15,0,5"/>

            <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="8">
                <Label Grid.Row="0" Grid.Column="0" Text="Versi贸n:" FontAttributes="Bold"/>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding DeviceVersion}"/>

                <Label Grid.Row="1" Grid.Column="0" Text="Bater铆a:" FontAttributes="Bold"/>
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding BatteryLevel}"/>
            </Grid>

            <Button Text="Actualizar Informaci贸n"
                    Command="{Binding GetInfoCommand}"
                    BackgroundColor="{StaticResource Secondary}"/>

            <!-- =====================================================
                 CONFIGURACIN DE DATAMATRIX
                 ===================================================== -->
            <Label Text="Configuraci贸n de C贸digos" FontSize="18" FontAttributes="Bold" Margin="0,15,0,5"/>

            <Border StrokeShape="RoundRectangle 10"
                    Stroke="Orange"
                    StrokeThickness="2"
                    Padding="15"
                    BackgroundColor="{AppThemeBinding Light=#FFF8E1, Dark=#4A3C00}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="锔 Configuraci贸n para DataMatrix"
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="El esc谩ner se configurar谩 autom谩ticamente al conectar para leer SOLO c贸digos DataMatrix. Tambi茅n puedes reconfigurar manualmente:"
                           FontSize="12"
                           LineBreakMode="WordWrap"
                           HorizontalTextAlignment="Center"/>

                    <Button Text=" Configurar para DataMatrix SOLO"
                            Command="{Binding ConfigureDataMatrixCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"
                            FontAttributes="Bold"
                            Margin="0,5,0,0"/>
                </VerticalStackLayout>
            </Border>

            <!-- =====================================================
                 CONTROL DE VOLUMEN
                 ===================================================== -->
            <Label Text="Control de Volumen (0-4)" FontSize="18" FontAttributes="Bold" Margin="0,15,0,5"/>

            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                <Slider Grid.Column="0"
                        Minimum="0"
                        Maximum="4"
                        Value="{Binding VolumeLevel}"
                        VerticalOptions="Center"/>

                <Label Grid.Column="1"
                       Text="{Binding VolumeLevel}"
                       FontSize="20"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       WidthRequest="30"
                       HorizontalTextAlignment="Center"/>
            </Grid>

            <Button Text="Aplicar Volumen"
                    Command="{Binding SetVolumeCommand}"
                    BackgroundColor="{StaticResource Tertiary}"/>

            <!-- =====================================================
                 DATOS LEDOS (CDIGOS DE BARRAS)
                 ===================================================== -->
            <Label Text="ltimo C贸digo Le铆do" FontSize="18" FontAttributes="Bold" Margin="0,15,0,5"/>

            <Frame BorderColor="{StaticResource Primary}"
                   Padding="15"
                   CornerRadius="8"
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}">
                <Label Text="{Binding LastDataRead}"
                       FontSize="16"
                       FontFamily="Courier"
                       LineBreakMode="WordWrap"
                       HorizontalTextAlignment="Center"/>
            </Frame>

            <!-- =====================================================
                 INDICADOR DE ACTIVIDAD
                 ===================================================== -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              Color="{StaticResource Primary}"
                              HeightRequest="50"
                              Margin="0,10"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
